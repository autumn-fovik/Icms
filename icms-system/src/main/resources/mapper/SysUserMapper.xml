<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangpy.system.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wangpy.common.core.domain.entity.SysUserEntity">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="nick_name" property="nickName" />
        <result column="user_type" property="userType" />
        <result column="email" property="email" />
        <result column="phonenumber" property="phonenumber" />
        <result column="sex" property="sex" />
        <result column="avatar" property="avatar" />
        <result column="password" property="password" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
        <result column="login_ip" property="loginIp" />
        <result column="login_date" property="loginDate" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
        <collection property="roleIds" select="selectRolesByUserId" column="{userId=user_id}" ofType="com.wangpy.common.core.domain.entity.SysRoleEntity"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, user_name, nick_name, user_type, email, phonenumber, sex, avatar, password, status, del_flag, login_ip, login_date, create_by, create_time, update_by, update_time, remark
    </sql>
    <!--    查询当前用户拥有的所有权限-->
    <select id="queryUserPermission"  resultType="String">
        SELECT perms FROM sys_menu WHERE menu_id in (SELECT menu_id FROM sys_role_menu WHERE role_id IN(SELECT role_id FROM sys_user_role WHERE user_id = #{userId}) ) AND perms != ""
    </select>
    <!-- 根据用户名查询用户-->
    <select id="queryUserByUserName" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM sys_user WHERE user_name = #{username}
    </select>
    <select id="queryUserMenu"  resultMap="com.wangpy.system.mapper.SysMenuMapper.BaseResultMap">
        SELECT * FROM sys_menu WHERE menu_id in (SELECT menu_id FROM sys_role_menu WHERE role_id IN(SELECT role_id FROM sys_user_role WHERE user_id = #{userId}) ) AND menu_type != 'F' ORDER BY order_num ASC
    </select>
    <select id="queryUserByUserId" resultType="com.wangpy.common.core.domain.entity.SysUserEntity">
        SELECT * FROM sys_user WHERE user_id = #{userId}

    </select>
    <select id="selectRolesByUserId" parameterType="java.util.Map" resultMap="com.wangpy.system.mapper.SysRoleMapper.BaseResultMap"> SELECT distinct r.* FROM sys_role r LEFT JOIN sys_user_role ur ON ur.role_id = r.role_id WHERE ur.user_id = #{userId} </select>
    <select id="list" resultMap="com.wangpy.system.mapper.SysUserMapper.BaseResultMap"> select * from sys_user </select>
</mapper>
